# -----------------------------
# FastAPI App Settings
# -----------------------------
APP_NAME=B2B Marketplace
APP_VERSION=0.1.0
DEBUG=True

# -----------------------------
# Database (PostgreSQL)
# -----------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=marketplace
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------
# Redis
# -----------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# -----------------------------
# RabbitMQ
# -----------------------------
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/${RABBITMQ_VHOST}

# -----------------------------
# Security / Authentication
# -----------------------------
# Generate a secure key: openssl rand -hex 32
SECRET_KEY=replace_with_secure_secret_key_generated_using_openssl
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------
# Rate Limiting
# -----------------------------
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------
# Email / Notifications (Optional)
# -----------------------------
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASSWORD=your-email-password

# -----------------------------
# Plugin System
# -----------------------------
ENABLE_PLUGIN_HOT_RELOAD=false
